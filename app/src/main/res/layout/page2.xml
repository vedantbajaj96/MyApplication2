<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#F3F3F3">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?attr/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar" />

    <TextView
        android:text="Congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:id="@+id/textView" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:gravity="center">

            <TextView
                android:text="YOU GOT"
                android:textSize="24dp"
                android:paddingTop="50dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#3D9122"
                android:id="@+id/text1" />
        <TextView
            android:text="CLEAN ELECTRICITY"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#3D9122"
            android:paddingBottom="20dp"
            android:id="@+id/text2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ok_5d9c2b_100"
            android:layout_marginTop="16dp"
            android:id="@+id/imageButton"
            android:padding="20dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Thanks for making a difference"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:id="@+id/text3" />
        <TextView
            android:text="A DEWA representative will be contacting you soon"
            android:textSize="24dp"
            android:paddingTop="50dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#3D9122"
            android:paddingBottom="30dp"
            android:id="@+id/text" />
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            tools:context=".GridXMLActivity" >
            <Button
                android:id="@+id/button1"
                android:layout_gravity="left|top"
                android:text="Analytics"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/button2"
                android:layout_gravity="left|top"
                android:text="FAQs"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"/>


        </GridLayout>




</LinearLayout>




</RelativeLayout>
